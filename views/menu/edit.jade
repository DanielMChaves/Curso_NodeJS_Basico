extends ../layout.jade
block contenido
	div(class="col-md-5 center-block no-float top-space text-left")
		h1 Editar Producto
		form(method="post" action="/menu/#{product.id}?_method=put" style="margin-top:1.5em;" enctype="multipart/form-data")
			div(class="form-group")
				label Nombre
				input(type="text" name="title" value="#{product.title}" placeholder="Nombre del producto" class="form-control")
			div(class="form-group")
				label Descripción
				textarea(name="description" placeholder="Descripción del producto" class="form-control")
					=product.description 
			div(class="form-group")
				label Precio
				input(type="number" name="price" placeholder="Precio del producto" class="form-control" value="#{product.price}")
			div(class="form-group")
				label Password
				input(type="password" name="password" placeholder="Contraseña" class="form-control")
			div(class="form-group text-right")
				input(type="submit" class="btn btn-info" value="Guardar")